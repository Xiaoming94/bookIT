<h1>Listar bokningar</h1>
<% if can? :create, Booking %>
  <%= link_to 'Ny Bokning', new_booking_path, class: 'btn btn-primary' %>
<% end %>
<% if false # can? :manage, WhitelistItem %>
  <%= link_to 'Whitelist items', whitelist_items_path %> |
<% end %>
<% if current_user.present? %>
  <% if params[:filter].present? %>
    <%= link_to 'Alla bokningar', bookings_path, class: 'btn btn-boring' %>
  <% else %>
    <%= link_to 'Dina bokningar', bookings_path(filter: current_user.cid), class: 'btn btn-boring' %>
  <% end %>
<% end %>
