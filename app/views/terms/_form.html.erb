<%= form_for(@term) do |f| %>
  <% if @term.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@term.errors.count, "error") %> prohibited this term from being saved:</h2>

      <ul>
      <% @term.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, 'Titel' %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content, 'Text' %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :active, 'Aktiv' do %>
      <%= f.check_box :active %> Aktiv
    <% end %>
  </div>
  <div class="actions field">
    <%= f.submit %>
  </div>
<% end %>
